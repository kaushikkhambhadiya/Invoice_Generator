<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainllsupplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/llbuyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buyername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firm Name"
                android:textColor="@color/color_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
            android:id="@+id/buyeremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail"
                android:textColor="@color/color_black"
            android:textSize="20sp" />


            <TextView
                android:id="@+id/buyeraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/color_black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buyercity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="City"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/buyerpincode"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_black"
                    android:layout_height="wrap_content"
                    android:text=" Pin Code"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
            android:id="@+id/buyergstin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GST IN"
                android:textColor="@color/color_black"
            android:textSize="18sp" />

            <TextView
            android:id="@+id/buyerstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
                android:textColor="@color/color_black"
            android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbuyeredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/iveditcustomer"-->
                <!--android:layout_width="@dimen/_30sdp"-->
                <!--android:layout_height="@dimen/_30sdp"-->
                <!--android:src="@drawable/edit" />-->

            <ImageView
                android:id="@+id/ivdeletecustomer"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/delete" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/color_blue" />


</LinearLayout>