<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.conestogasem3.invoicegenerator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/invice"
        android:label="@string/app_name"
        android:roundIcon="@drawable/invice"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Supplier_Details"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListOfBuyer"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".BuyerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ProductActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListOfProduct"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".GenerateInvoicePdf"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".InvoiceListActivity"
            android:label="@string/title_activity_main2"/>


    </application>

</manifest>